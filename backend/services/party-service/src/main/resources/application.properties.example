spring.application.name=umdb-service

server.port=8082

# Data Source
spring.datasource.driver-class-name=org.postgresql.Driver
spring.datasource.url=jdbc:postgresql://localhost:5432/
spring.datasource.username=
spring.datasource.password=

# Hibernate
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.PostgreSQLDialect
spring.jpa.properties.hibernate.show_sql=true
spring.jpa.properties.hibernate.format_sql=true
spring.jpa.properties.hibernate.default_schema=party-service

# Flyway
spring.flyway.user=
spring.flyway.password=
spring.flyway.schemas=party-service

# Actuator
management.endpoints.web.exposure.include=health, info, metrics

# Logging
logging.level.root=INFO
logging.level.org.springframework.web=DEBUG
logging.level.com.radiuk.auth_service=DEBUG
logging.file.name=backend/services/party-service/logs

# Backup
backup.csv.path.party=backend/services/party-service/backup/parties.csv

# Internal secret
internal.api.secret=