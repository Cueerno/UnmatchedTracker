# Data Source
spring.datasource.driver-class-name=org.postgresql.Driver
spring.datasource.url=jdbc:postgresql://postgres:5432/${POSTGRES_DB}
spring.datasource.username=${POSTGRES_USER}
spring.datasource.password=${POSTGRES_PASSWORD}

# Redis
spring.data.redis.host=${SPRING_REDIS_HOST}
spring.data.redis.port=${SPRING_REDIS_PORT}
spring.cache.type=redis

# Hibernate
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.PostgreSQLDialect
spring.jpa.show-sql=true
spring.jpa.properties.hibernate.format_sql=true

# RabbitMQ
spring.rabbitmq.host=rammitmq
spring.rabbitmq.port=5672
spring.rabbitmq.username=${RABBIT_USER}
spring.rabbitmq.password=${RABBIT_PASS}

# Actuator
management.endpoints.web.exposure.include=health, info, metrics

# Logging
logging.level.root=INFO
logging.level.org.springframework.web=DEBUG
logging.level.com.radiuk.unmatched_backend_core=DEBUG
logging.file.name=backend/services/unmatched-backend-core/logs

# Internal secret
internal.api.secret=${INTERNAL_API_SECRET}

#Backup
backup.csv.path.user=backend/services/user-service/backup/users.csv